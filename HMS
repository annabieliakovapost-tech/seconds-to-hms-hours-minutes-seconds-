const seconds = +prompt("Давай переведем секунды в часы и минуты?)");
alert(getTimeBySeconds(seconds));

function getTimeBySeconds(seconds) {
  let sek = seconds % 60; //10
  let totalMin = Math.floor(seconds / 60); //75
  let min = totalMin % 60; // 15
  let hours = (totalMin - min) / 60; //1

  if (hours < 10) {
    hours = "0" + hours;
  }
  if (min < 10) {
    min = "0" + min;
  }
  if (sek < 10) {
    sek = "0" + sek;
  }
  return hours + ":" + min + ":" + sek;
}
